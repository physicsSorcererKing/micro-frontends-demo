{
  "name": "micro-frontends-demo",
  "author": "physicsSorcererKing",
  "license": "MIT",
  "scripts": {
    "dev:all": "pnpm -r --parallel dev",
    "build:all": "pnpm -r --parallel build",
    "serve:all": "pnpm -r --parallel serve",
    "root-config": "pnpm --filter @psk/root-config",
    "shared": "pnpm --filter @psk/shared-dependencies",
    "style": "pnpm --filter @psk/styleguide",
    "header": "pnpm --filter @psk/app-header-react",
    "nav": "pnpm --filter @psk/app-nav-vue",
    "main": "pnpm --filter @psk/app-main-angular",
    "footer": "pnpm --filter @psk/app-footer-svelte",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.4"
  },
  "engines": {
    "node": ">=20.9.0",
    "pnpm": ">=9"
  }
}
